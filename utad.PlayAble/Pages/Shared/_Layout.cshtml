<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - utad.PlayAble</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/utad.PlayAble.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="container header-container">
            <div class="logo">
                <div class="logo-text">play<span>Able</span></div>
            </div>

            <nav>
                <ul>
                    <li><a href="#" class="active">Início</a></li>
                    <li><a href="#">Jogos</a></li>
                    <li><a href="#">Sobre Nós</a></li>
                    <li><a href="#">Comunidade</a></li>
                    <li><a href="#">Suporte</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - utad.PlayAble - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>